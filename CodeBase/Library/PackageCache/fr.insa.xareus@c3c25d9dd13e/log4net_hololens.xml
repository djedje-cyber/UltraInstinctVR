<?xml version="1.0" encoding="utf-8"?>
<log4net debug="false" update="Merge" threshold="ALL">
  <appender name="UnityAppender" type="Xareus.Unity.Log4netUnityAppender,Xareus.Unity">
    <layout type="log4net.Layout.PatternLayout">
      <param name="conversionPattern" value="%-5level %logger - %message%newline"/>
    </layout>
  </appender>

  <root>
    <level value="Warn" />
    <appender-ref ref="UnityAppender"/>
  </root>

  <logger name="Xareus.Relations" additivity="false">
    <level value="Warn" />
    <appender-ref ref="UnityAppender" />
  </logger>
  <logger name="Xareus.Scenarios" additivity="false">
    <level value="Debug" />
    <appender-ref ref="UnityAppender" />
  </logger>
</log4net>
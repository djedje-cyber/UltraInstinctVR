<?xml version="1.0" encoding="utf-8"?>
<log4net debug="false" update="Merge" threshold="ALL">
  <appender name="UnityAppender" type="Xareus.Unity.Log4netUnityAppender,Xareus.Unity">
    <layout type="log4net.Layout.PatternLayout">
      <param name="conversionPattern" value="%date{ABSOLUTE} %-5level %logger - %message%newline" />
    </layout>
  </appender>
  <appender name="FileAppender" type="Xareus.Unity.Log4netFileAppender,Xareus.Unity">
    <layout type="log4net.Layout.PatternLayout">
      <param name="conversionPattern" value="%message%newline" />
    </layout>
    <param name="basename" value="log-%i-%h.txt" />
    <param name="appendToFile" value="false" />
  </appender>

  <root>
    <level value="Warn" />
    <appender-ref ref="UnityAppender" />
  </root>

  <logger name="Xareus.Relations.CSharp.Engine" additivity="false">
    <level value="ERROR" />
    <appender-ref ref="UnityAppender" />
  </logger>

  <logger name="Xareus.Scenarios" additivity="false">
    <level value="Debug" />
    <appender-ref ref="UnityAppender" />
  </logger>

  <logger name="Xareus.Relations.Unity" additivity="false">
    <level value="Debug" />
    <appender-ref ref="UnityAppender" />
  </logger>

  <logger name="RelationSensor" additivity="false">
    <level value="Debug" />
    <appender-ref ref="UnityAppender" />
  </logger>
</log4net>
<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:TextField picking-mode="Ignore" label="Remote Server Address" name="Remote_address" />
    <uie:IntegerField label="Remote Server Port" name="Remote_Port" />
    <ui:VisualElement style="flex-direction: row; justify-content: space-around;">
        <ui:Button text="Connect" display-tooltip-when-elided="true" name="Connect" style="flex-direction: row; flex-grow: 0;" />
        <ui:Button text="Connect and link to all scenarios" display-tooltip-when-elided="true" name="Connect_All" style="flex-direction: row; flex-grow: 0;" />
        <ui:Button text="Close" display-tooltip-when-elided="true" name="Close" style="flex-grow: 0;" />
    </ui:VisualElement>
    <ui:VisualElement name="Connection" style="flex-grow: 1;">
        <ui:TextField picking-mode="Ignore" label="Status" value="filler text" text="Not Connected" focusable="false" readonly="true" name="Status" usage-hints="None" />
        <ui:Label text="Remote Scenarios&#10;" display-tooltip-when-elided="true" style="align-items: center; position: relative; flex-direction: row; justify-content: space-between; -unity-text-align: upper-center; -unity-font-style: bold;" />
        <ui:ListView focusable="true" name="Scenarios" header-title="Scenarios" binding-path="scenarioEntries" show-bound-collection-size="false" show-alternating-row-backgrounds="All" style="flex-grow: 1; flex-shrink: 0;" />
        <ui:VisualElement name="Select_Buttons" style="justify-content: space-around; flex-direction: row;">
            <ui:Button text="Select All" display-tooltip-when-elided="true" name="Select_All" />
            <ui:Button text="Select None" display-tooltip-when-elided="true" name="Select_None" />
            <ui:Button text="Link to selected scenarios" display-tooltip-when-elided="true" name="Link_Selected" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>

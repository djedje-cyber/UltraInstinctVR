
.unity-toggle {
}

.unity-toolbar-toggle {
    border-width: 1px;
    border-top-width : 0px;
    border-bottom-width : 0px;
    margin-top: 0px;
    margin-bottom: 0px;
    margin-right: 0px;
    margin-left: 0px;
    padding-left: 2px;
}

.unity-toolbar-toggle:checked {
    color: rgb(196, 196, 196);
    background-color: rgb(80, 80, 80);
}

.unity-toolbar-toggle .unity-toggle__checkmark{
    width: 0px;
    height: 0px;
}

#ButtonsContainer {
    background-color: #3C3C3C;
}

LayerBarButton.unity-toolbar-toggle {
    padding-left: 12px;
    padding-right: 10px;
    position: relative;
    left: -10px;
    right: -5px;
    background-image: resource('LayerDark_Normal');
}


LayerBarButton:hover.unity-toolbar-toggle {
    background-image: resource('LayerDark_Selected');
}

LayerBarButton:checked.unity-toolbar-toggle {
    background-image: resource('LayerDark_Selected');
    background-color: #3C3C3C;
}

VisualElement.not-saved-by-ref {
    background-color: var(--unity-colors-highlight-background) !important;
}